# Convex Configuration
CONVEX_URL=your_convex_deployment_url
VITE_CONVEX_URL=your_convex_deployment_url

# Square Payment Configuration  
VITE_SQUARE_APPLICATION_ID=your_square_app_id
VITE_SQUARE_LOCATION_ID=your_square_location_id
VITE_SQUARE_ENVIRONMENT=production

# VAPID Keys for Push Notifications
VAPID_PRIVATE_KEY=your_vapid_private_key

# Cloudflare Configuration (for automatic cache purging on deploy)
# Get Zone ID from: Cloudflare Dashboard > Your Domain > Overview (right sidebar)
# Create API Token at: Cloudflare Dashboard > My Profile > API Tokens > Create Token > "Purge Cache" template
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Other Configuration
NODE_ENV=production
PORT=3202